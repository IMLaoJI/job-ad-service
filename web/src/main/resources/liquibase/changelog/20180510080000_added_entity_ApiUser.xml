<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="20180510080000" author="olko">
        <createTable tableName="API_USER">
            <column name="ID" type="varchar(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="USERNAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COMPANY_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COMPANY_EMAIL" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TECHNICAL_CONTACT_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TECHNICAL_CONTACT_EMAIL" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ACTIVE" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="CREATE_DATE" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_ACCESS_DATE" type="date">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
